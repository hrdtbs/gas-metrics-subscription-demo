{
  "name": "gas-metrics",
  "version": "1.0.0",
  "description": "Google Apps Scriptプロジェクトの実行エラーを自動監視するサーバーレスサービス",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:migrate": "wrangler d1 migrations apply gas-metrics-db --remote",
    "db:local-migrate": "wrangler d1 migrations apply gas-metrics-db --local",
    "db:list-table": "wrangler d1 execute gas-metrics-db --command \"SELECT name FROM sqlite_master WHERE type='table'\""
  },
  "dependencies": {
    "@auth/core": "^0.39.1",
    "@auth/d1-adapter": "^1.10.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@cloudflare/workers-types": "^4.20231218.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.28.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.7.1"
}
